Config { font = "xft:Consolas:size=12"
       , bgColor = "#3f3c6d"
       , fgColor = "#a8a3f7"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","<usedratio>%"] 10
                    , Run Date "%a %d %b %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | Mem: %memory% | <fc=#ee9a00>%date%</fc>"
       }
