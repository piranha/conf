\timing on

\set HISTCONTROL ignoreboth
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTSIZE 20000
\pset null '‚àÖ'

\set csv '\\pset format csv'
\set norm '\\pset format aligned'

\x auto
--\setenv PAGER 'pspg --no-mouse -bX --no-commandbar --no-topbar'
--\pset linestyle unicode
