# -*- mode: conf -*-

[ui]
username = Alexander Solovyov <piranha@piranha.org.ua>
ignore = ~/.hgignore
ssh = ssh -C
merge = internal:merge

[hooks]
#commit.diffstat = python:~/dev/hg/hg/contrib/python-hook-examples.py:diffstat
#changegroup.diffstat = python:~/dev/hg/hg/contrib/python-hook-examples.py:diffstat
#pretxncommit.whitespace = hg export tip | (! egrep -q '^\+.*[[:space:]]$')

[merge-tools]
p4.priority = 60
p4.premerge = True
p4.executable = /Applications/p4merge.app/Contents/MacOS/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False

[extdiff]
cmd.opendiff = opendiff-w
cmd.ksdiff = ksdiff-wrapper
opts.ksdiff = hg

[extensions]
progress=
patchbomb=
mq=
graphlog=
churn=
color=
children=
pager=
parentrevspec=
purge=
record=
rebase=
zeroconf=
bookmarks=
extdiff=
inotify=!
convert=
share=
transplant=
relink=
schemes=

shrink=~/dev/hg/hg/contrib/shrink-revlog.py
perf=~/dev/hg/hg/contrib/perf.py
#hgsubversion=~/dev/hg/hgsubversion/hgsubversion
attic=~/dev/hg/hgattic/attic.py
crecord=~/dev/hg/crecord/crecord/
qup=~/dev/hg/qup.py
rdiff=~/dev/hg/rdiff/rdiff.py
#pbranch=~/dev/hg/hgext/pbranch.py
hgactivity=~/dev/hg/hgactivity/activity.py
#index=~/dev/hg/indexes-extension/indexes/
qimprovements=~/dev/hg/qimprovements/qimprovements.py
#tasks = ~/dev/hg/hgtasks/hgext/tasks.py
#hg-git = ~/dev/hg/hg-git/hggit/
histedit = ~/dev/hg/histedit/
#hgkeychain=
artemis = ~/dev/hg/artemis/artemis.py
review = ~/dev/hg/hg-review/review/

[diff]
git = True
showfunc = True

[patch]
eol = lf

[inotify]
autostart = True

[bookmarks]
track.current = True

[email]
method = sendmail

[pager] # with export LESS="FRQX"
attend = annotate, diff, glog, incoming, log, outgoing, qdiff, tip, p, sglog, slog, cat, ., /

[alias]
slog = log --template '{rev}:{node|short} {desc|firstline} ({date|shortdate} by {author|person})\t{tags}\n' -l 10
slog = log --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n' -l 10
dlog = log --template '{date|shortdate} [{rev}:{node|short}] {diffstat} {author|person}: {desc|firstline}\n' -l 10
flog = log --template '{date|shortdate} [{rev}:{node|short}] {size} {author|person}: {desc|firstline}\n' -l 10
wlog = log --style compact -l 10
sin = incoming --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sout = outgoing --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sheads = heads --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sglog = glog --style concise -l 10
zlog = glog --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n' -l 10
#sg = glog --template '[{rev}:{node|short}] by {author|person} ({date|isodate})\n{desc|firstline|fill68}\n\n' -l 8
p = log -v --style=compact -p -r
nudge = push --rev .
sqr = summary -q --remote
. = slog -f -r .:null
/ = sglog
qnew = qnew -D -U
qseries = qseries -s
cm = ci -m
churn = churn --aliases ~/.churnaliases
activity = activity --aliases ~/.churnaliases

[schemes]
p = ssh://piranha.org.ua/hg/
p+http = http://hg.piranha.org.ua/
s = ssh://sapientisat.org/
w = file:~/dev/web/

[tasks]
auto.track.new = True
