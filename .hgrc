[ui]
username = Alexander Solovyov <piranha@piranha.org.ua>
ignore = ~/.hgignore
ssh = ssh -C

[hooks]
#pretxncommit.whitespace = hg export tip | (! egrep -q '^\+.*[ \t]$')

[merge-tools]
p4.priority = 60
p4.premerge = True
p4.executable = /Applications/p4merge.app/Contents/MacOS/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False

[extdiff]
cmd.opendiff = opendiff-w

[defaults]
churn = --aliases /home/piranha/.churnaliases

[extensions]
alias=
patchbomb=
mq=
graphlog=
color=
churn=
purge=
record=
rebase=
zeroconf=
bookmarks=
extdiff=
inotify=!

perf=~/dev/hg/hg/contrib/perf.py
#hgsubversion=~/dev/hg/hgsubversion
#attic=~/dev/hg/hgattic/attic.py
autopager=~/dev/hg/autopager/autopager.py
crecord=~/dev/hg/hgext/crecord.py
qup=~/dev/hg/qup.py
#fastimport=~/dev/hg/hg-fastimport/fastimport
rdiff=~/dev/hg/rdiff/rdiff.py
#pbranch=~/dev/hg/hgext/pbranch.py
cutehg=~/dev/hg/cutehg/cutehg
schemes=~/dev/hg/schemes/schemes.py

[diff]
git = True
showfunc = True

[inotify]
autostart = True

[bookmarks]
track.current = True

[email]
method = sendmail

[autopager]
attend = annotate, diff, glog, incoming, log, outgoing, qdiff, tip

[alias]
slog = log --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n' -l 10
dlog = log --template '{date|shortdate} [{rev}:{node|short}] {diffstat} {author|person}: {desc|firstline}\n' -l 10
flog = log --template '{date|shortdate} [{rev}:{node|short}] {size} {author|person}: {desc|firstline}\n' -l 10
wlog = log --style short -l 10
sin = incoming --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sout = outgoing --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sheads = heads --template '{date|shortdate} [{rev}:{node|short}] {author|person}: {desc|firstline}\n'
sglog = glog --style short -l 10
#sg = glog --template '[{rev}:{node|short}] by {author|person} ({date|isodate})\n{desc|firstline|fill68}\n\n' -l 8
p = log -v --style=short -p -r

[schemes]
p = ssh://piranha.org.ua/hg/
p+http = http://hg.piranha.org.ua/
